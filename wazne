using namespace std;

int main() {
    unsigned n;
    cin>>n;
    if ((n>0) && (n<10)){
        for(unsigned i=1; i<=n ;i++){
            for(unsigned j=1; j<=i;j++){
            cout<<j;
            }cout<<endl;
        }
            
    }
    else{
        cout<<"ZÅ‚a";
    }
}

