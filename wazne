#include <iostream>
using namespace std;

int main() {
    unsigned int n,m;
    cin>>n>>m;
    if((n>0)&&(m<10)){
        for(unsigned i=1;i<=n;i++){
            for(unsigned j=1;j<=m;j++){
            cout<<j;
            }cout<<endl;
        }
    }
    else{
        cout<<"Zla liczba";
        }
}   


zad 5A
#include <iostream>
using namespace std;

int main() {
    string napis;
    cin >> napis;

    for (int i = napis.size() - 1; i >= 0; i--) {
        cout << (napis[i] == 'A' ? 'B' : napis[i]);
    }

    return 0;
}
zad 5B
#include <iostream>
using namespace std;

int main() {
    string napis;
    cin >> napis;

    for (int i = napis.size() - 1; i >= 0; i--) {
        if (napis[i] == 'C') {
            cout << napis[i] << napis[i];
        }
        else {
            cout << napis[i];
        }
    }

    return 0;
}
