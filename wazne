zad 6 

#include <iostream>
using namespace std;

int main() {
    int m, n;
    cin >> m >> n;

    int macierz[10][10];
    int macierzT[10][10];

    for (int i = 0; i < m; i++)
        for (int j = 0; j < n; j++)
            cin >> macierz[i][j];

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            macierzT[i][j] = macierz[j][i];
        }
    }

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            cout << macierzT[i][j] << " ";
        }
        cout << endl;
    }

    return 0;
}

